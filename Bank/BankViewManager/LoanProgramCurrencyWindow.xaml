<Window x:Class="BankViewManager.LoanProgramCurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankViewManager"
        mc:Ignorable="d"
        Icon="Resources/bankLogo.png"
        FontFamily="Rubik"
        Title="Выбор валюты" Height="160" Width="350">
    <Grid Margin="0,0,0,-1">
        <Label Content="Валюта" HorizontalAlignment="Left" Margin="20,29,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxCurrencies" HorizontalAlignment="Left" Margin="105,33,0,0" VerticalAlignment="Top" Width="195"/>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="47,89,0,0" VerticalAlignment="Top" Width="78" Height="23" Click="buttonSave_Click"/>
        <Button x:Name="buttonCancel" Content="Назад" HorizontalAlignment="Left" Margin="222,89,0,0" VerticalAlignment="Top" Width="78" Height="23" Click="buttonCancel_Click"/>

    </Grid>
</Window>
