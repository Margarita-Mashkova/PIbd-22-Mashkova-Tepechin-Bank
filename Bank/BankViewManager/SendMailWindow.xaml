<Window x:Class="BankViewManager.SendMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankViewManager"
        mc:Ignorable="d"
         Icon="Resources/bankLogo.png"
        FontFamily="Rubik"
        Title="Отправка на почту" Height="200" Width="600">
    <Grid>
        <Label Content="Отправить на" HorizontalAlignment="Left" Margin="127,48,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Margin="228,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
        <Button x:Name="buttonSend" Content="Отправить отчёт" HorizontalAlignment="Left" Margin="127,120,0,0" VerticalAlignment="Top" Width="115" Height="25" Click="buttonSend_Click"/>
        <Button x:Name="buttonCancel" Content="Назад" HorizontalAlignment="Left" Margin="341,120,0,0" VerticalAlignment="Top" Width="115" Height="25" Click="buttonCancel_Click"/>

    </Grid>
</Window>
