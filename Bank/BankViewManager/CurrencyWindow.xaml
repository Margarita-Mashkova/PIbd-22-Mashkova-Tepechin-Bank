<Window x:Class="BankViewManager.CurrencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankViewManager"
        mc:Ignorable="d"
        Icon="Resources/bankLogo.png"
        FontFamily="Rubik"
        Title="Валюта" Height="225" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Курс в рублях" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Margin="125,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="20"/>
        <TextBox x:Name="textBoxRate" HorizontalAlignment="Left" Margin="125,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="20"/>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="43,139,0,0" VerticalAlignment="Top" Width="87" Height="23" Click="buttonSave_Click"/>
        <Button x:Name="buttonCancel" Content="Назад" HorizontalAlignment="Left" Margin="278,139,0,0" VerticalAlignment="Top" Width="87" Height="23" Click="buttonCancel_Click"/>

    </Grid>
</Window>
